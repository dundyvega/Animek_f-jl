\end_layout

\begin_layout Standard
-- Az űrhajó neve -- mondta Naradere.
 -- Szóval ti azt sem tudjátok, hogy milyen űrhajóra jöttetek?
\end_layout

\begin_layout Standard
-- Neked hallgas! -- szólt rá a két lány egyszerre.
 
\end_layout

\begin_layout Standard
-- Hogy kerültél ide? -- kérdezte Eriszne.
